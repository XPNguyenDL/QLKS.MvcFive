@model Supplier

@{
    ViewBag.Title = "Quản lý nhà cung cấp";
}

@section pluginStyles
{
	<link href="~/Content/plugins/iCheck/custom.css" rel="stylesheet"/>
}

<div class="row">
	<div class="col-md-12">
		<div class="ibox float-e-margins">
			<div class="ibox-title">
				<h5>Cập thông tin nhà cung cấp</h5>
			</div>
			
			<div class="ibox-content p-sm">
				@using (Html.BeginForm("Edit","Supplier",FormMethod.Post, new  
				{  
					enctype = "multipart/form-data"  
				}
					))
				{
					@Html.AntiForgeryToken()
					<div class="form-horizontal">
						@Html.ValidationSummary(true, "", new { @class = "text-danger"})
						@Html.HiddenFor(model => model.SupplierId)
						@Html.HiddenFor(model => model.RowVersion)
						
						@Html.Partial("_CreateOrEdit", Model)
						@Html.Partial("_Toolbar")
					</div>
				}
			</div>
		</div>
	</div>
</div>


@section scripts
{
	@Scripts.Render("~/bundles/admjqueryval")
	<script src="~/Scripts/plugins/iCheck/icheck.min.js"></script>
	
    <script type="text/javascript">
        $(function () {
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green'
            });
        });
    </script>
}
