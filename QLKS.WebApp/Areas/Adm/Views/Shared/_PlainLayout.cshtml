
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />

    <title>@ViewBag.Title - Cheap Deal Shop</title>

    <!--bootstrap & Font-->
    @Styles.Render("~/Content/admbootstrap")

    <!-- Plugin Styles-->
    @RenderSection("pluginStyles", required: false)
    

    @Styles.Render("~/Content/admstyle")

    <!-- Custom-->
    @Styles.Render("~/bundles/modernizr")
</head>
<body class="gray-bg">
    <div class="middle-box text-center loginscreen animated fadeInDown">
        @RenderBody()
    
    </div>

    <!--Main scripts, including jquery, bootstrap, metisMenu, slimScroll-->
    @Scripts.Render("~/bundles/admmainjs")

    @RenderSection("scripts", required: false)
</body>
</html>
